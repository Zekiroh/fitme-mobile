<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@android:color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="48dp"
        android:paddingBottom="100dp">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Back" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account"
                    android:textColor="#999999"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="•"
                    android:textColor="#999999"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plan"
                    android:textColor="#999999"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="•"
                    android:textColor="#999999"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment"
                    android:textColor="#F97316"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/textFitMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FitMe"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/plan_option_background_checked"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_check_selected"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/selectedPlanDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Membership Plan:"
                android:textColor="#F97316"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose a Payment Method"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="24dp" />

        <!-- Payment Options -->
        <RadioGroup
            android:id="@+id/radioGroupPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- GCash -->
            <LinearLayout
                android:id="@+id/containerGCash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/payment_option_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <RadioButton
                    android:id="@+id/paymentGCash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#F97316"
                    android:focusable="false"
                    android:clickable="false" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GCash"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="4dp"
                        android:src="@drawable/gcash_logo"
                        android:contentDescription="GCash Logo" />
                </LinearLayout>
            </LinearLayout>

            <!-- Credit/Debit Card -->
            <LinearLayout
                android:id="@+id/containerCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/payment_option_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <RadioButton
                    android:id="@+id/paymentCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#F97316"
                    android:focusable="false"
                    android:clickable="false" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Credit/Debit Card"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/mastercard_logo"
                        android:contentDescription="Mastercard Logo" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/visa_logo"
                        android:contentDescription="Visa Logo" />
                </LinearLayout>
            </LinearLayout>

            <!-- Cash Payment -->
            <LinearLayout
                android:id="@+id/containerCOD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/payment_option_background"
                android:padding="16dp"
                android:layout_marginBottom="24dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <RadioButton
                    android:id="@+id/paymentCOD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#F97316"
                    android:focusable="false"
                    android:clickable="false" />

                <TextView
                    android:layout_marginStart="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cash Payment"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="16sp" />
            </LinearLayout>
        </RadioGroup>

        <!-- Payment Details Section -->
        <LinearLayout
            android:id="@+id/paymentDetailsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp"
            android:visibility="gone" />

        <!-- Checkbox and Terms (Initially Hidden) -->
        <LinearLayout
            android:id="@+id/privacyLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone">

            <ImageView
                android:id="@+id/checkboxIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_checkbox_unchecked"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/privacyCheckboxText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Button (Initially Hidden) -->
        <Button
            android:id="@+id/buttonPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Done"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_button"
            android:enabled="false"
            android:visibility="gone"
            android:contentDescription="Only enable when all required fields are filled and terms checkbox is checked." />
    </LinearLayout>
</ScrollView>
