<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/bmiInfoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is BMI?"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/orange_500" />

    <TextView
        android:id="@+id/bmiInfoDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="BMI (Body Mass Index) is a general guideline used to estimate your body fat based on your weight and height. It's just a health estimate, not a final judgment."
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:lineSpacingExtra="4dp" />
</LinearLayout>
