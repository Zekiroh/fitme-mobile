<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/dev_dialog_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="When should I contact the dev team?"
        android:textColor="#F97316"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="For app-related concerns like bugs, errors, or feedback on features, feel free to reach out to us directly."
        android:textSize="14sp"
        android:textColor="#111827"
        android:lineSpacingExtra="4dp" />
</LinearLayout>
