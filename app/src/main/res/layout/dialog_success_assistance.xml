<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/assistance_card_background"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_success"
            android:layout_marginEnd="8dp"
            android:contentDescription="Success Icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submitted Successfully"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#111827" />
    </LinearLayout>

    <TextView
        android:id="@+id/textSuccessDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#111827"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnDismiss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OK"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:background="@drawable/orange_rounded_button" />
</LinearLayout>
