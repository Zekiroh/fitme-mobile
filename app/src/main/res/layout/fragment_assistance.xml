<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Section 1: Header -->
        <TextView
            android:id="@+id/textWelcomeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome, [Full Name]"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#F97316"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Need help or have a concern? Weâ€™re here to support you anytime."
            android:textSize="14sp"
            android:textColor="#4B5563"
            android:layout_marginBottom="16dp" />

        <!-- Section 2: Tips / Notice -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ’¬ You can ask us anything from workout help to technical issues. Weâ€™re here to support you."
            android:padding="12dp"
            android:background="#FFF7ED"
            android:textColor="#EA580C"
            android:textSize="13sp"
            android:layout_marginBottom="20dp" />

        <!-- SECTION 3: Card-style Form Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/assistance_card_background"
            android:elevation="6dp"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="4dp"
            android:clipToPadding="false"
            android:clipChildren="false">

            <!-- Section Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tell Us What's Up"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#F97316"
                android:textSize="18sp"
                android:layout_marginBottom="12dp" />

            <AutoCompleteTextView
                android:id="@+id/dropdownCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Choose a category"
                android:inputType="none"
                android:background="@drawable/rounded_edittext"
                android:padding="12dp"
                android:drawableEnd="@drawable/ic_dropdown_arrow"
                android:drawableRight="@drawable/ic_dropdown_arrow"
                android:drawablePadding="12dp"
                android:focusable="false"
                android:clickable="true"
                android:textColor="#111827"
                android:textSize="14sp"
                android:layout_marginBottom="16dp" />

            <!-- Message -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Message:"
                android:textSize="14sp"
                android:textColor="#111827"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Tell us more about your concern..."
                android:background="@drawable/rounded_edittext"
                android:padding="12dp"
                android:textColor="#111827"
                android:textSize="14sp"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:layout_marginBottom="24dp" />

            <!-- Submit Button -->
            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/orange_rounded_button" />
        </LinearLayout>

        <!-- View My History Button -->
        <Button
            android:id="@+id/btnViewHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View My History"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/orange_rounded_button"
            android:layout_marginBottom="24dp" />

        <!-- Section 4: Contact Info -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Need immediate assistance?"
            android:textSize="14sp"
            android:textColor="#F97316"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textGymContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email: lowcalfitness01@gmail.com\nPhone: +63 912 345 6789"
            android:textSize="14sp"
            android:textColor="#4B5563"
            android:textAlignment="center"
            android:lineSpacingExtra="4dp"
            android:linksClickable="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="20dp"
            android:background="#E5E7EB" />

        <!-- Developer Contact Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/devTeamTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Talk to Our Dev Team"
                android:textSize="14sp"
                android:textColor="#F97316"
                android:textStyle="bold"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/devInfoIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_info"
                android:layout_marginStart="6dp"
                android:contentDescription="Info icon"
                android:tint="#F97316"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <TextView
            android:id="@+id/textDevContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email: samsantech.feud@gmail.com\nPhone: +63 945 678 1234"
            android:textSize="14sp"
            android:textColor="#4B5563"
            android:textAlignment="center"
            android:lineSpacingExtra="4dp"
            android:linksClickable="true" />
    </LinearLayout>
</ScrollView>
