<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/assessment_background">

    <!-- Top Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="48dp">

        <!-- Back + Progress + Skip -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <LinearLayout
                android:id="@+id/progressIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <View style="@style/ProgressDashInactive" />
                <View style="@style/ProgressDashInactive" />
                <View style="@style/ProgressDashActive" />
                <View style="@style/ProgressDashInactive" />
                <View style="@style/ProgressDashInactive" />
            </LinearLayout>

            <TextView
                android:id="@+id/skipText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skip"
                android:textColor="#F97316"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="8dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Title -->
        <TextView
            android:id="@+id/frequencyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How frequently do you \nwork out?"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="24sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp" />
    </LinearLayout>

    <!-- Frequency Selections -->
    <LinearLayout
        android:id="@+id/frequencyOptionsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal">

        <!-- Beginner -->
        <LinearLayout
            android:id="@+id/optionBeginner"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            android:background="@drawable/selector_goal_option"
            android:clickable="true"
            android:focusable="true"
            android:padding="16dp"
            android:gravity="center">

            <TextView
                android:id="@+id/beginnerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BEGINNER"
                android:textColor="#F97316"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Just start exercising"
                android:textColor="#F97316"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Intermediate -->
        <LinearLayout
            android:id="@+id/optionIntermediate"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            android:background="@drawable/selector_goal_option"
            android:clickable="true"
            android:focusable="true"
            android:padding="16dp"
            android:gravity="center">

            <TextView
                android:id="@+id/intermediateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INTERMEDIATE"
                android:textColor="#F97316"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1-2 times a week"
                android:textColor="#F97316"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Advanced -->
        <LinearLayout
            android:id="@+id/optionAdvanced"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/selector_goal_option"
            android:clickable="true"
            android:focusable="true"
            android:padding="16dp"
            android:gravity="center">

            <TextView
                android:id="@+id/advancedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADVANCED"
                android:textColor="#F97316"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Over 3 times a week"
                android:textColor="#F97316"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- Next Button -->
    <Button
        android:id="@+id/btnNextFrequency"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:text="Next"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:background="@drawable/button_next_selector"
        android:enabled="false"
        android:alpha="0.5" />
</RelativeLayout>
