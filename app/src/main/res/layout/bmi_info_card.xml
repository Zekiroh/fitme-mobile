<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bmiCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bmi_card_background"
    android:padding="20dp"
    android:layout_marginHorizontal="24dp"
    android:layout_marginBottom="24dp"
    android:elevation="6dp">

    <!-- BMI Label Row (centered) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/bmiValueText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Current BMI: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#F97316"
            android:layout_marginEnd="8dp" />

        <ImageView
            android:id="@+id/bmiInfoIcon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_info"
            android:contentDescription="BMI Info"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <TextView
        android:id="@+id/bmiCategoryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Normal"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/bmiTipText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You're doing great! Keep up a healthy lifestyle."
        android:textSize="14sp"
        android:textColor="#374151"
        android:layout_marginTop="10dp"
        android:lineSpacingExtra="2dp"
        android:textAlignment="center" />
</LinearLayout>
