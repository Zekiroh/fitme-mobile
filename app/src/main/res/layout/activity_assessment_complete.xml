<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp">

    <!-- Centered Completion Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Completion Icon -->
        <ImageView
            android:id="@+id/completeIcon"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/ic_success"
            android:contentDescription="Completed"
            android:layout_marginBottom="24dp" />

        <!-- Completion Text -->
        <TextView
            android:id="@+id/completionMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You're all set!"
            android:textColor="#16A34A"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/completionSubtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your fitness profile is now ready."
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginBottom="32dp" />
    </LinearLayout>

    <!-- Continue Button -->
    <Button
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:text="Continue"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:background="@drawable/button_next_selector"
        android:layout_marginBottom="32dp" />
</RelativeLayout>
