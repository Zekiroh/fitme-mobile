<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9E9E9"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_card"
        android:padding="18dp"
        android:layout_marginBottom="16dp"
        android:elevation="6dp"
        android:clipToPadding="false">

        <!-- My Profile Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Profile"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#E65100"
            android:layout_marginBottom="12dp"/>

        <!-- Name -->
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Name:" android:textColor="#E65100" android:layout_marginBottom="4dp"/>
        <TextView android:id="@+id/tvName" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:background="@android:drawable/edit_text" android:padding="10dp" android:text="John Doe"
            android:textColor="#000000" android:layout_marginBottom="12dp"/>

        <!-- Gender -->
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Gender:" android:textColor="#E65100" android:layout_marginBottom="4dp"/>
        <TextView android:id="@+id/tvGender" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:background="@android:drawable/edit_text" android:padding="10dp" android:text="Male"
            android:textColor="#000000" android:layout_marginBottom="12dp"/>

        <!-- Username -->
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Username:" android:textColor="#E65100" android:layout_marginBottom="4dp"/>
        <TextView android:id="@+id/tvUsername" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:background="@android:drawable/edit_text" android:padding="10dp" android:text="johndoe123"
            android:textColor="#000000" android:layout_marginBottom="12dp"/>

        <!-- Email -->
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Email:" android:textColor="#E65100" android:layout_marginBottom="4dp"/>
        <TextView android:id="@+id/tvEmail" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:background="@android:drawable/edit_text" android:padding="10dp" android:text="john@example.com"
            android:textColor="#000000" android:layout_marginBottom="12dp"/>

        <!-- Contact -->
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Contact:" android:textColor="#E65100" android:layout_marginBottom="4dp"/>
        <TextView android:id="@+id/tvContact" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:background="@android:drawable/edit_text" android:padding="10dp" android:text="+63 900 000 0000"
            android:textColor="#000000" android:layout_marginBottom="16dp"/>

        <!-- My Fitness Profile Header -->
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="My Fitness Profile" android:textSize="20sp" android:textStyle="bold"
            android:textColor="#E65100" android:layout_marginBottom="12dp"/>

        <!-- Fitness Level -->
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Fitness Level:" android:textColor="#E65100" android:layout_marginBottom="4dp"/>
        <TextView android:id="@+id/tvFitnessLevel" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:background="@android:drawable/edit_text" android:padding="10dp" android:text="Beginner"
            android:textColor="#000000" android:layout_marginBottom="12dp"/>

        <!-- Fitness Goal -->
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Fitness Goal:" android:textColor="#E65100" android:layout_marginBottom="4dp"/>
        <TextView android:id="@+id/tvFitnessGoal" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:background="@android:drawable/edit_text" android:padding="10dp" android:text="Lose Weight"
            android:textColor="#000000" android:layout_marginBottom="12dp"/>

        <!-- Weight -->
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Weight:" android:textColor="#E65100" android:layout_marginBottom="4dp"/>
        <TextView android:id="@+id/tvWeight" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:background="@android:drawable/edit_text" android:padding="10dp" android:text="70 kg"
            android:textColor="#000000" android:layout_marginBottom="12dp"/>

        <!-- Height -->
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Height:" android:textColor="#E65100" android:layout_marginBottom="4dp"/>
        <TextView android:id="@+id/tvHeight" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:background="@android:drawable/edit_text" android:padding="10dp" android:text="175 cm"
            android:textColor="#000000" android:layout_marginBottom="12dp"/>

        <!-- BMI -->
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="BMI:" android:textColor="#E65100" android:layout_marginBottom="4dp"/>
        <TextView android:id="@+id/tvBMI" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:background="@android:drawable/edit_text" android:padding="10dp" android:text="22.9"
            android:textColor="#000000" android:layout_marginBottom="12dp"/>
    </LinearLayout>
</ScrollView>
